<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body class="back2">
    <%- include('./components/navbar') -%>

       

        <div class="container mt-2">
          <a href="./home.html" class="btn btn-secondary fw-bold ">&larr; Back</a>
      </div>
      
<div class="container mt-5">
 <div class="container mt-5 bg-success text-center text-light fw-30 p-2">
   <h3>Mirar todos los Clientes</h3>
 </div>

    <table class="table mt-2">
        <thead class="bg-warning text-light">
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">DPI</th>
            <th scope="col">Numero de Cuenta</th>
            <th scope="col">Balence</th>
            <th scope="col">Action</th>
            <th scope="col">Eliminar</th>
            
          </tr>
        </thead>
        <tbody>
          <% if(data.length>0){%>
            <% data.forEach((e) => {%>
              <tr>
                <td style="background-color: #8b90f0"><%= e.name %></td>
                <td style="background-color: #666896"><%= e.dpi %></td>
                <td style="background-color: #55c6d2"><%= e.numeroTelefono %></td>
                <td style="background-color: #dda626"><%= e.amount  %></td>
                <td style="background-color: #7d9cd6">
                  <a href="/view/<%=e._id %>" class="btn btn-success">Ver y Transferir</a>
                </td>
                <td>
                  <a href="/delete/<%=e._id %>"" class="btn btn-danger" >
                  <i class="fa fa-trash" ></i>
                </a>
                </td>
              </tr>
                            
              <%}) %>        
            
            <%}else{%>
              <tr class="bg-warning text-light">
                <td>
                  
                    No records Found!
                  
                </td>
              </tr>
            
              
              <%} %>
        
        
        </tbody>
      </table>
    </div>

    <%- include('./components/bootstrapScript') -%>
</body>
</html>
